    <script>
   (function(){

 var preload = document.getElementById("preload");
 var loading = 0;
 var id = setInterval(frame, 70);

 function frame(){
  if(loading == 50) {
   clearInterval(id);
      window.open("/Home/Index", "_self");
  }
  else {
   loading = loading + 1;
   if(loading == 40) {
    preload.style.animation = "fadeout 1s ease";
   }
  }
 }


})();


    </script>



