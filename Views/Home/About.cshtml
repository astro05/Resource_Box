@{
    ViewBag.Title = "About";
}
@model ResourceBox.Models.ViewModel
<link rel="stylesheet" href="~/Content/about.css">

<div class="row">
    <div class="col">
        <img class="img1" src="~/Media/Images/AboutUs/im1.jpg">
    </div>
</div>
@foreach (var x in Model.AboutUs)
{

    <div class="container mt-5">
        <div class="card" style="border:0px">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Media/Images/AboutUs/com.png" class="img-fluid" alt="">
                </div>
                <div class="col-md-8">
                    <h2 class="card-title mt-2 text-center">@x.storyHeader</h2>
                    <p>
                        <b>
                            @x.story
                        </b>
                    </p>
                </div>
            </div>
        </div>
    </div>
