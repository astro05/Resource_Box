        <div class="our-team-text text-center">
            <br>
            <br>
            <h1> Our Focus</h1><br><br><br>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <div class="card mx-30">
                    <img src="@Url.Content(x.focusImg1)" class="card-img-top" alt="">
                    <div class="card-body">
                        <div class="quality text-center"><h5>Quality</h5></div>
                    </div>
                </div>
            </div>
